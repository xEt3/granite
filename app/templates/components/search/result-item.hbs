{{#if isEmployee}}
  <div class="ui tiny rounded image">
    {{display/employee-picture
      url=_picture
      employeeId=__id
      class="search-result-item__image"}}
  </div>
{{/if}}
{{#if (or _title _description)}}
  <div class="content">
    {{#if _title}}
      <div class="search-result-item__title header">
        {{_title}}
      </div>
    {{/if}}
    {{#if _description}}
      <div class="search-result-item__description meta">
        {{_description}}
      </div>
    {{/if}}
  </div>
{{/if}}
