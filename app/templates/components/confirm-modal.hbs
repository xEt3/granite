{{#if hasBlock}}
  {{yield startConfirmation}}
{{/if}}

{{#ui-modal name="profile" id=modalId class="confirm-modal basic small"}}
  <i class="close icon"></i>
  <div class="header">
    {{if title title 'Heads up!'}}
  </div>
  <div class="content">
    {{#if sourcesToClose}}
      Make sure to close your manual applicant sources!
      <ul class="ui list">
        {{#each sourcesToClose as |source|}}
          <li>{{source.name}}</li>
        {{/each}}
      </ul>
    {{/if}}
    <br><br>
    {{if confirmContent confirmContent 'Are you sure you want to do that?'}}
  </div>
  <div class="actions">
    <button class="ui inverted red button" {{action 'respond' false}}>
      {{if rejectText rejectText 'No'}}
    </button>
    <button class="ui inverted green right labeled icon button" {{action 'respond' true}}>
      {{if confirmText confirmText 'Yes'}}
      <i class="check icon"></i>
    </button>
  </div>
{{/ui-modal}}

