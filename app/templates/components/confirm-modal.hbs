{{#if hasBlock}}
  {{yield this.startConfirmation}}
{{/if}}

{{#ui-modal name="profile" id=this.modalId class="confirm-modal basic small"}}
  <i class="close icon"></i>
  <div class="header">
    {{if this.title this.title "Heads up!"}}
  </div>
  <div class="content">
    {{if this.confirmContent this.confirmContent (if this.deleteContext (concat "Are you sure you want to remove " this.deleteContext "?") "Are you sure you want to do that?")}}
  </div>
  <div class="actions">
    <button class="ui inverted red button" {{action "respond" false}}>
      {{if this.rejectText this.rejectText "No"}}
    </button>
    <button class="ui inverted green right labeled icon button" {{action "respond" true}}>
      {{if this.confirmText this.confirmText "Yes"}}
      <i class="check icon"></i>
    </button>
  </div>
{{/ui-modal}}

