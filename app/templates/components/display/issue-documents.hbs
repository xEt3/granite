<div ...attributes>
  <div class="content">
    <div class="header">
      {{@document.title}}
    </div>

    <a href={{@document.url}} target="_blank" class="right floated" rel="noopener noreferrer" download>
      <i class="download fitted icon"></i>
    </a>

    <ConfirmModal @class="item" @tagName="span" @confirmContent="Are you sure you want to delete this Document?" as |confirm|>
      <a href="#" class="text-danger asset-item__action--delete right floated" {{on "click" (prevent-default (pipe confirm (fn @onDelete @document)))}}>
        <EmberTooltip @side="left" @popperContainer="body" @text="Remove document" />
        <i class="trash icon"></i>
      </a>
    </ConfirmModal>

    <div class="meta">
      {{#if @document.description}}
        <br>
        {{@document.description}}
      {{/if}}
      <span class="ui small text right floated">Uploaded on {{time @document.created}} by {{@document.creator.fullName}}</span>
    </div>
  </div>
</div>
