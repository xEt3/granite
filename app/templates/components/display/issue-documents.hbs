  <div class="content">
    <div class="header">
      {{document.title}}
    </div>

    <a href={{document.url}} target="_blank" class="right floated" rel="noopener" download>
      <i class="download fitted icon"></i>
    </a>

    {{#confirm-modal
      class="item"
      tagName="span"
      confirmContent="Are you sure you want to delete this Document?"
      as |confirm|
    }}
      <a href="#" class="text-danger asset-item__action--delete right floated" {{action (pipe confirm (action "delete"))}}>
        {{ember-tooltip
          side="left"
          popperContainer="body"
          text="Remove Document"}}
          <i class="trash icon"></i>
        </a>
        {{/confirm-modal}}

    <div class="meta">
      {{#if document.description}}
        <br>
        {{document.description}}
      {{/if}}
      <span class="ui small text right floated">Uploaded on {{time document.created}} by {{document.creator.fullName}}</span>
    </div>
  </div>
