{{#link-to step.link class=linkClass}}
  {{#if completed}}
    <i class="massive check icon first-steps-card__check-icon"></i>
  {{/if}}

  <h3 class="first-steps-card__title">
    <i class="{{step.icon}} icon"></i>
    {{step.title}}
  </h3>

  <p>{{step.description}}</p>

  <div class="ui bottom attached {{if completed "green" "red"}} label first-steps-card__step">
    {{#if completed}}
      This card has been completed
    {{else}}
      {{step.condition}} to complete this card
    {{/if}}
  </div>
{{/link-to}}
