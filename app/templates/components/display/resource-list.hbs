{{#each this.model as |item|}}
  {{#if hasBlock}}
    {{yield (hash
      listItem=(component this.itemComponent item class=this.componentClass)
      item=item
    )}}
  {{else}}
    {{#if this.linkTo}}
      {{#link-to this.linkTo (get item this.modelIdentifier) class=this.linkClass}}
        {{component this.itemComponent item class=this.componentClass}}
      {{/link-to}}
    {{else}}
      {{component this.itemComponent item class=this.componentClass}}
    {{/if}}
  {{/if}}
{{else}}
  <h2 class="ui center aligned header">No {{this.resourceName}} available.</h2>
{{/each}}
