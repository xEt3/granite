<div class="content">
  <div class="header">
    {{department.name}}
    {{#if department.code}}
      <div class="ui blue label">
        {{department.code}}
      </div>
    {{/if}}
  </div>
  <div class="right floated">
    {{#confirm-modal deleteContext=department.name as |confirm|}}
      {{#ui-popup tagName='span' position="left center" content="Delete department"}}
        <a href="#" class="text-danger" {{action (pipe confirm (action 'delete'))}}>
          <i class="trash icon"></i>
        </a>
      {{/ui-popup}}
    {{/confirm-modal}}
  </div>
  <div class="meta">
    <span class="ui small text right floated">Created {{time-ago department.created}} by {{department.creator.fullName}}</span>
  </div>
</div>
