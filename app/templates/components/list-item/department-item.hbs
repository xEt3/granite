<div class="item">
  <div class="content">
    <div class="header">
      {{@department.name}}
      {{#if @department.code}}
        <div class="ui blue label">
          {{@department.code}}
        </div>
      {{/if}}
    </div>
    <div class="right floated">
      <LinkTo @route="account.anatomy.department.edit" @model={{@department.id}}>
        <EmberTooltip @side="left" @popperContainer="body" @text="Edit department" />
        <i class="edit icon"></i>
      </LinkTo>
      <ConfirmModal @deleteContext={{@department.name}} @tagName="span" as |confirm|>
        <a href="#" class="text-danger" {{on "click" (prevent-default (pipe confirm (fn @onDelete @department)))}}>
          <EmberTooltip @side="left" @popperContainer="body" @text="Delete department" />
          <i class="trash icon"></i>
        </a>
      </ConfirmModal>
    </div>
    <div class="meta">
      <span class="ui small text right floated">Created {{time-ago @department.created}} {{#if @department.creator.fullName}}by {{@department.creator.fullName}}{{/if}}</span>
    </div>
  </div>
</div>
