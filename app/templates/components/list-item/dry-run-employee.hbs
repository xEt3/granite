<div class="ui fluid card">
  <div class="content">
    <h3>
      Employee record #{{x-inc this.index}}
      {{#if this.missingRequiredFields}}
        <i class="exclamation circle icon text-red">
          <EmberTooltip @side="right" @popperContainer="body" @text={{this.missingRequiredFields}} />
        </i>
      {{/if}}
    </h3>
    <ul>
      {{#each-in this.dryRunRecord as |key value|}}
        <Census::DryRunEmployeeRelationship @key={{key}} @value={{value}} @availableFields={{this.availableFields}} />
      {{/each-in}}
    </ul>
  </div>
</div>
