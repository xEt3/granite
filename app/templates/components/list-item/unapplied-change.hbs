<h4 class="ui light horizontal divider header">
  {{history.creator.fullName}}
  made
  {{history.diff.length}}&nbsp;{{inflect-text 'changes' history.diff.length}}
  at {{time history.created 'h:mma'}}
  to be applied on {{time history.effectiveOn}}
</h4>
<div class="ui divided list">
  {{#each history.diff as |diff|}}
    <div class="item">
      <strong>{{humanize-key (join-array diff.path '.')}}</strong>
      changed from
      <span class="ui label">{{diff-value-translator key=diff.path value=diff.lhs}}</span> to
      <span class="ui green label">{{diff-value-translator key=diff.path value=diff.rhs}}</span>
    </div>
  {{/each}}
</div>
{{#confirm-modal title="Are you sure?" confirmContent="This will change the effective date to today." class="item" as |confirm|}}
  <button class='positive ui button' {{action (pipe confirm (action 'modifyEffectiveDate'))}}>Apply these changes now</button>
{{/confirm-modal}}
{{#confirm-modal title="Are you sure?" confirmContent="This will delete the changes." class="item" as |confirm|}}
  <button class="negative ui button" {{action (pipe confirm (action 'delete' history))}}>Discard these changes</button>
{{/confirm-modal}}
