{{#if hasBlock}}
  {{yield employee.fullName employee.title}}
{{else}}
  <div class="ui tiny rounded image">
    <img src="assets/mock/avatars/small/7.png">
  </div>
  <div class="content">
    <div class="header">{{employee.fullName}}</div>
    <div class="meta">
      <span>{{employee.jobTitle}}</span>
      <span class="ui small text right floated">{{time employee.created}}</span>
    </div>
    <div class="extra">
      <div class="ui red label"><i class="remove user icon"></i> Terminated (Offboarding)</div>
      <div class="ui right floated yellow label"><i class="check icon"></i> 1 Pending Action Item</div>
    </div>
  </div>
{{/if}}
