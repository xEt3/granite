{{#if hasBlock}}
  {{yield employee.fullName employee.title}}
{{else}}
  <div class="ui tiny rounded image">
    {{display/employee-picture url=employee.picture employeeId=employee.id}}
  </div>
  <div class="content">
    <div class="header">{{employee.fullName}}</div>
    <div class="meta">
      <span>{{employee.jobTitle}}</span>
      <span class="ui small text right floated">{{time employee.created}}</span>
    </div>
    <div class="extra">
      {{#if employee.externalLinkService}}
      <div class="ui basic label">
        <i class="download icon"></i>Imported from {{capitalize employee.externalLinkService}}
      </div>
        {{/if}}
      {{#if employee.onboarding}}
        <div class="ui green label">
          <i class="circle thin icon"></i>Onboarding
          {{#if employee.onboardingProgress}}
            {{employee.onboardingProgress}}% complete
          {{else}}
            in progress
          {{/if}}
          {{#if employee.onboarder}}
            by {{employee.onboarder.fullName}}
          {{/if}}
        </div>
      {{/if}}

      {{#if employee.offboarding}}
        <div class="ui red label">
          <i class="remove icon"></i>Offboarding
          {{#if employee.offboardingProgress}}
            {{employee.offboardingProgress}}% complete
          {{else}}
            in progress
          {{/if}}
          {{#if employee.offboarder}}
            by {{employee.offboarder.fullName}}
          {{/if}}
        </div>
      {{/if}}

      {{#if employee.terminatedOn}}
        <div class="ui red label">
          <i class="user times icon"></i>Terminated on {{time employee.terminatedOn}}
        </div>
      {{/if}}
    </div>
  </div>
{{/if}}
