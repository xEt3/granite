{{#if this.participant.company}}
  {{! is employee }}
  {{#link-to
    "account.employee"
    this.participant.id
    class="ui image label"
  }}
    {{display/employee-picture
      url=this.participant.picture employeeId=this.participant.id
    }}
    {{this.participant.fullName}}
    {{#if this.detail}}
      <div class="detail">{{detail}}</div>
    {{/if}}
  {{/link-to}}
{{else}}
  <span class="ui image label">
    {{display/employee-picture
      url=this.participant.picture
      employeeId=this.participant.id
    }}
    {{this.participant.fullName}}
    {{#if this.detail}}
      <div class="detail">{{detail}}</div>
    {{/if}}
  </span>
{{/if}}
