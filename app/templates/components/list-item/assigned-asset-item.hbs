<div class="content">
  <div class="header">
    {{asset.identifier}}<i class="{{asset.asset.icon}} icon right floated"></i>
  </div>
</div>
<div class="content">
  <h3 class="ui sub header">
    Activity
  </h3>
  <div class="ui small feed">
    <div class="event">
      <div class="content">
        <div class="summary">
          {{#if assignment.assigner}}
            {{#link-to "account.employee" assignment.assigner.id}}
              {{assignment.assigner.fullName}}
            {{/link-to}}
            assigned
          {{else}}
            Assigned
          {{/if}}
          from
          {{#link-to "account.asset" asset.asset.id}}
            {{asset.asset.name}}
          {{/link-to}}
          on {{time asset.created}}
        </div>
      </div>
    </div>
    {{#if attributes.length}}
      <a href="#" {{action "toggleProperty" "details"}}>
        {{ember-tooltip
          side="right"
          popperContainer="body"
          text="View attributes"}}
        <i class="info circle icon"></i>
      </a>
    {{/if}}
    {{#if attributes.length}}
      {{#liquid-if details}}
        <div class="ui segment">
          {{#each attributes as |attr|}}
            <div class="line-item-value">
              <i>{{attr.key}}</i>
              <u>
                {{attr.value}}
              </u>
            </div>
          {{/each}}
        </div>
      {{/liquid-if}}
    {{/if}}
  </div>
</div>
{{#confirm-modal confirmContent="Are you sure you want to unassign this item and return it to your stock?" as |confirm|}}
  <button class="ui bottom attached fluid button" role="button" {{action (pipe confirm (action "unassign"))}}>
    <i class="remove user icon"></i>
    Unassign asset
  </button>
{{/confirm-modal}}
