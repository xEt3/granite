{{#if hasBlock}}
  {{yield this.model}}
{{else}}
  <div class="header">
    {{#if (await this.model.actionSeverity)}}
      {{get (await this.model.actionSeverity) "name"}} on
    {{/if}}
    {{time (if this.model.issuedOn this.model.issuedOn this.model.created) "MMMM Do YYYY"}}
  </div>
  <div class="meta">
    <span class="ui small text right floated">Created: {{time this.model.created}}{{#if this.model.creator}} by {{this.model.creator.fullName}}{{/if}}</span>
  </div>
  <div class="extra">
  </div>
{{/if}}
