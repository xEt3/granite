{{#ui-modal id=modalId}}
  <div class="header">
    Disqualify Candidate
  </div>
  <div class="content">
    <form class="ui form">
      <div class="field">
        <label for="dq-reason">Reason for disqualification</label>
        {{#ui-dropdown class="selection" id="dq-reason" selected=model.disqualificationReason onChange=(action (mut model.disqualificationReason)) as |execute mapper|}}
          <i class="dropdown icon"></i>
          <div class="default text">Reason for disqualification</div>
          <div class="menu">
            <div class="item" data-value={{map-value mapper null}}>
              Do not specify
            </div>
            {{#each disqualificationReasons as |reason|}}
              <div class="item" data-value={{map-value mapper reason}}>
                {{reason}}
              </div>
            {{/each}}
          </div>
        {{/ui-dropdown}}
      </div>
      <span>
        <i>The disqualification reason may be used for EEO reporting.</i>
      </span>
    </form>
  </div>
  <div class="actions">
    {{#ui-checkbox checked=model.disqualificationEmail onChange=(action (mut model.disqualificationEmail))}}
      <label>
        Send Rejection Notification
        {{#if model}}
          to {{model.person.firstName}} (<a href="mailto:{{model.person.email}}" class="ats-confirm-disqualify__email-link">{{model.person.email}}</a>)
        {{/if}}?
      </label>
    {{/ui-checkbox}}
    <button class="ui inverted red button" {{action "respond" false}}>
      Cancel
    </button>
    <button class="ui green right labeled icon button" {{action "respond" true}}>
      Confirm Disqualify
      <i class="check icon"></i>
    </button>
  </div>
{{/ui-modal}}
