{{#ui-modal id=modalId observeChanges=true}}
  <i class="close icon"></i>
  <div class="header">
    Are you sure?
  </div>
  <div class="content ui form">
    {{input/date-range}}
    <div class="ui divider"></div>
    {{input/ui-input
      type="text"
      inputId="event-title"
      placeholder="Event Title"
      value=title}}
  </div>
  <div class="actions">
    <button class="ui inverted red button" {{action 'respond' false}}>
      Cancel
    </button>
    <button class="ui inverted green right labeled icon button" {{action makeEvent}}>
      Schedule
      <i class="check icon"></i>
    </button>
  </div>
{{/ui-modal}}
