{{#each this.model as |child|}}
  {{#if child.isVisible}}
    {{#if hasBlock}}
      <XTreeChildren @select={{this.select}} @hover={{this.hover}} @hoverOut={{this.hoverOut}} @checkable={{this.checkable}} @chosenId={{this.chosenId}} @recalculateStateAction={{action this.recalculateState}} @model={{child}} as |node|>
        {{yield node}}
      </XTreeChildren>
    {{else}}
      <XTreeChildren @model={{child}} @select={{this.select}} @hover={{this.hover}} @hoverOut={{this.hoverOut}} @checkable={{this.checkable}} @recalculateStateAction={{action this.recalculateState}} @chosenId={{this.chosenId}} />
    {{/if}}
  {{/if}}
{{/each}}
