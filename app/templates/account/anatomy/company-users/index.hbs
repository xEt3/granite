<hgroup class="clearfix">
  <h1 class="ui header left floated">
    Users
  </h1>

  <div class="right aligned text floated menu__actions">
    <h3 class="ui right floated header">
      {{#link-to "account.anatomy.company-users.new" class="right floated"}}
        {{ember-tooltip
          side="left"
          popperContainer="body"
          text="Add a user"}}
        <i class="plus icon"></i>
      {{/link-to}}
    </h3>
  </div>
</hgroup>
<div class="ui divider"></div>
  <div class="ui divided items">
    {{#each model as |user|}}
      {{list-item/user-item
        user
        allUsers
        onNotify=(route-action "notify")
        onRefresh=(route-action "refresh")
      }}
    {{else}}
      <h2 class="ui center aligned header">No users available.</h2>
    {{/each}}
  </div>

{{elements/x-pagination page=(readonly page) pages=(readonly pages) onchange=(action (mut page))}}
