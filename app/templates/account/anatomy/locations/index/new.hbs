<form class="ui form container" {{action "save" on="submit"}}>
  <div class="field">
    <label for="location-name">Name</label>
    {{input type="text" value=model.name id="location-name" placeholder="Location Name"}}
  </div>
  <div class="field">
    <label for="location-code">Code</label>
    {{input type="text" value=model.code id="location-code" placeholder="Location Code"}}
  </div>
  <div class="field">
    <label for="location-phone">Telephone Number</label>
    {{input type="tel" value=model.phone id="location-phone" placeholder="Location Telephone Number"}}
  </div>
  <div class="field">
    <label for="address-line-1">Address Line 1</label>
    {{validated-input type="text" model=model valuePath="addressLine1" placeholder="Address Line 1" id="address-line-1"}}
  </div>
  <div class="field">
    <label for="address-line-2">Address Line 2</label>
    {{input type="text" value=model.addressLine2 placeholder="Address Line 2" id="address-line-2"}}
  </div>
  <div class="three fields">
    <div class="field">
      <label for="address-city">City</label>
      {{input type="text" value=model.addressCity placeholder="City" id="address-city"}}
    </div>
    <div class="field">
      <label for="state-name">State</label>
      {{#ui-dropdown class="search selection" selected=model.addressState onChange=(action (mut model.addressState))}}
        {{#if stateIsMontana}}<i class="text-danger heart icon"></i>{{/if}}
        <div class="default text">State</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          {{#each states as |state|}}
            <div class="item" data-value={{state.value}}>
              {{state.label}}
            </div>
          {{/each}}
        </div>
      {{/ui-dropdown}}
    </div>
    <div class="field">
      <label for="address-zip">Zip</label>
      {{input type="text" value=model.addressZipcode placeholder="Zip" id="address-zip"}}
    </div>
  </div>
  <div class="ui divider"></div>
  {{#form/action-button type="submit" class="ui huge fluid green button" loading=working}}Add Location{{/form/action-button}}
  {{#link-to "account.anatomy.locations.index"}}
    <div class="ui huge fluid orange button">Cancel</div>
  {{/link-to}}
</form>
<div class="ui divider"></div>
