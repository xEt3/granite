<hgroup class="clearfix">
  <h1 class="ui header left floated">
    Departments
  </h1>

  <div class="right aligned text floated menu__actions">
    <h3 class="ui header">
      {{#liquid-if this.addingDepartment}}
        {{#link-to "account.anatomy.departments.index" class="right floated text-danger"}}<i class="remove icon"></i>{{/link-to}}
      {{else}}
        {{#link-to "account.anatomy.departments.index.new" class="right floated"}}
          {{ember-tooltip
            side="left"
            popperContainer="body"
            text="Add a department"}}
          <i class="plus icon"></i>
        {{/link-to}}
      {{/liquid-if}}
    </h3>
  </div>
</hgroup>

<div class="ui divider"></div>

{{liquid-outlet class="add-department"}}

<div class="ui divided items">
  {{#each this.model as |department|}}
    {{list-item/department-item department=department onDelete=(action "delete" )}}
  {{else}}
    <h2 class="ui center aligned header">No departments available.</h2>
  {{/each}}
</div>

{{elements/x-pagination page=(readonly this.page) pages=(readonly this.pages) onchange=(action (mut this.page))}}
