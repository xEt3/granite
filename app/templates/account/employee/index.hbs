<div class="ui container basic segment">
  <UiMenu @menuClass="pointing menu__employee-page">
    {{#if this.subRoute}}
      <div class="active item mobile">
        <i class="{{this.subRoute.icon}} icon"></i> {{capitalize this.subRoute.name}}
      </div>
    {{/if}}
    <LinkTo @route="account.employee.index.index" class="item">
      <i class="list icon"></i>Summary
    </LinkTo>
    <UiDropdown class="item menu-employee-page__more">
      More<i class="dropdown icon"></i>
      <div class="menu">
        {{#each this.subRoutes as |subRoute|}}
          <LinkTo @route={{subRoute.route}} class="{{if (eq subRoute this.subRoute) 'active '}}item">
            <i class="{{subRoute.icon}} icon"></i> {{subRoute.name}}
          </LinkTo>
        {{/each}}
      </div>
    </UiDropdown>

    <div class="right menu">
      {{#if this.visualIdRequired}}
        {{#link-to "account.employee.index.visual-id" this.model.id class="item text-red"}}<i
             class="exclamation icon"></i>Requires Visual ID{{/link-to}}
      {{/if}}
      {{#if this.model.onboarding}}
        {{#link-to "account.employee.onboard" this.model.id class="item text-blue"}}<i class="wizard icon"></i>Continue
          Onboarding{{/link-to}}
      {{/if}}
      {{#if this.model.offboarding}}
        {{#link-to "account.employee.offboard" class="item text-red"}}<i class="wizard icon"></i>Continue
          Offboarding{{/link-to}}
      {{/if}}

      {{#ui-dropdown class="item icon top right"}}
        <i class="wrench icon"></i><i class="dropdown icon"></i>
        <div class="menu">
          {{#link-to "account.employee.index.edit" class="item"}}<i class="edit icon"></i>Edit{{/link-to}}
          {{#if (not (or this.model.onboarding this.model.offboardingCompleted))}}
            {{#link-to "account.employee.offboard.index" class="item"}}<i class="cut icon"></i>Offboard
              Employee...{{/link-to}}
          {{/if}}
          {{#if (not this.model.activatedOn)}}
            <div class="item">
              {{#confirm-modal as |confirmActivation|}}
                <a href="#" {{action (pipe confirmActivation (action "resend"))}}>
                  <i class="envelope icon"></i>Resend Activation Email...
                  {{#if this.working}}
                    <div class="ui active dimmer">
                      <div class="ui text loader">Loading</div>
                    </div>
                  {{/if}}
                </a>
              {{/confirm-modal}}
            </div>
          {{/if}}
          <div class="text-danger header">Danger Zone</div>
          <div class="item">
            {{#confirm-modal deleteContext=this.model.fullName as |confirm|}}
              <a href="#" class="text-danger" {{action (pipe confirm (action "delete"))}}><i
                   class="trash icon"></i>Delete Record</a>
            {{/confirm-modal}}
          </div>
        </div>
      {{/ui-dropdown}}
    </div>
  </UiMenu>

  <div
       class="ui basic container segment text-white employee-index-container {{unless this.onSummary "employee__index-container--minimal"}}">
    <div class="ui equal width stackable grid container">
      <div class="twelve wide column">
        <h1 class="ui left floated center aligned header employee-header-group">
          {{#ui-dimmer class="ui circular image" onElement=".ui.segment" variation="inverted" duration=(hash show=1500) on="hover"}}
            {{#link-to "account.employee.index.edit-picture" class="ui circular segment dimmer hover-circular"}}
              <div class="content">
                <div class="center text-white">
                  <div>Edit Picture</div>
                </div>
              </div>
            {{/link-to}}
            <div class="ui small circular image employee-image">
              {{display/employee-picture url=this.model.picture employeeId=this.model.id}}
            </div>
          {{/ui-dimmer}}
          <div class="inverted content text-white employee-basic-meta">
            {{this.model.fullName}}
            <div class="sub header text-white">
              {{#if this.model.jobDescription}}
                {{#link-to "account.job-description" this.model.jobDescription.id}}
                  {{this.model.jobTitle}} <br>
                {{/link-to}}
              {{else}}
                {{this.model.jobTitle}} <br>
              {{/if}}
              {{#if this.model.hireDate}}
                Since {{time this.model.hireDate "MMMM YYYY"}}
              {{/if}}
            </div>
          </div>
        </h1>
      </div>
      <div class="right aligned four wide column vertically-aligned contact-column">
        <div class="ui center aligned basic container text-white contact-container">
          <span class="right floated">
            {{#if this.model.phone}}
              <div class="phone-contact-icon">
                <a href="tel:{{this.model.phone}}"><i
                     class="big circular inverted green phone icon phone-contact-icon-hover"></i></a>
              </div>
            {{/if}}
            {{#if this.model.email}}
              <div class="item email-contact-icon">
                <a href="mailto:{{this.model.email}}"><i
                     class="big circular inverted grey mail icon email-contact-icon-hover"></i></a>
              </div>
            {{/if}}
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="ui section divider"></div>
  {{outlet}}
</div>
