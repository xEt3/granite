<div class="ui container employee__offboarding">
  {{#ui-progress percent=progress class="indicating employee__offboarding-progress"}}
    <div class="bar"></div>
  {{/ui-progress}}
  <div class="ui padded segment employee__offboarding-segment">
    <div class="ui basic segment">
      <h1 class="ui header">Offboarding {{model.fullName}}</h1>
    </div>
    <div class="ui basic segment">
      {{outlet}}
      {{#if onStartRoute}}
        <div class="ui divider"></div>
          <h2 class="ui header">
            <i class="legal icon"></i>
            <div class="content">
              This is permanent
              <div class="sub header">
                Once you have offboarded the employee it can not be undone.  You will have to recreate the employee if you change your mind after you've offboarded them.
              </div>
            </div>
          </h2>
          <div class="ui divider"></div>
            <h2 class="ui header">
              <i class="credit card alternative icon"></i>
              <div class="content">
                Removed from billing
                <div class="sub header">
                  This employee will be removed from your billing once you have completely offboarded the employee.
                </div>
              </div>
            </h2>
            <button class="ui huge positive fluid button" {{action "startOffboarding"}}>Let's get started</button>
          {{/if}}
      <button class="ui huge fluid button"{{action "cancelOffboard"}}>Cancel</button>
    </div>
  </div>
  {{display/form-steps steps=steps basePath='account.employee.offboard' class='employee__offboarding-steps'}}
</div>
