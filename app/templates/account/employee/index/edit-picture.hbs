<div class="ui raised very padded text segment">
  <div id="template" class="center aligned">
    <DropZone @id="input__dropzone--employee-profile-image" @class="input__dropzone" @url={{this.pictureEndpoint}} @uploadMultiple={{false}} @acceptedFiles="image/*" @maxFiles={{1}} @autoProcessQueue={{false}} @dictDefaultMessage="Drop Files or Click to Replace/Add Picture" @thumbnailWidth="175" @headers={{hash X-API-Token=this.auth.token}} @addedfile={{action "addedFile"}} @success={{action "uploadedFile"}} @capture="camera" />
  </div>

  <div class="ui divider"></div>

  {{#if this.fileIsAdded}}
    <div class="field">
      <button class="ui green fluid huge button" {{action "processQueue"}} type="button">
        <i class="upload icon"></i>Save
      </button>
    </div>
    <div class="field">
      <button class="ui negative fluid button" {{action "removeFile"}} type="button">
        <i class="undo icon"></i>Remove File
      </button>
    </div>
  {{/if}}
  <div class="field">
    <button class="ui fluid button" {{action "leaveUpload"}} type="button">
      <i class="left angle icon"></i>Back
    </button>
  </div>
</div>
