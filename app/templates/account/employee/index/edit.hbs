<ConfirmModal as |confirm|>
  <form class="ui raised very padded text segment form" {{action (pipe confirm (action "save")) on="submit"}}>
    <h2 class="ui header">Editing {{this.model.fullName}}</h2>
    <div class="ui secondary pointing menu">
      <LinkTo @route="account.employee.index.edit.index" class="item">Personal</LinkTo>
      <LinkTo @route="account.employee.index.edit.job" class="item">Job</LinkTo>
      <LinkTo @route="account.employee.index.edit.custom-fields" class="item">Custom Fields</LinkTo>
      <LinkTo @route="account.employee.index.edit.settings" class="item">Settings</LinkTo>
    </div>
    {{outlet}}
    <div class="ui divider"></div>
    <Form::ActionButton @type="submit" @class="ui massive fluid green button" @disabled={{not (or this.model.hasDirtyAttributes this.relationshipsChanged)}} @loading={{this.working}}>
      <i class="save icon"></i>Save
    </Form::ActionButton>
    <button type="button" class="ui massive fluid basic button" disabled={{not (or this.model.hasDirtyAttributes this.relationshipsChanged)}} {{action (pipe (action "selectEffectiveDate") (action "save"))}}>
      <i class="calendar icon"></i>Save with effective date
    </button>
  </form>
</ConfirmModal>

<UiModal @name="effective-date-modal" @id="effective-date-modal" @class="small form">
  <i class="close icon"></i>
  <div class="header">
    When would you like to date these changes?
  </div>
  <div class="content">
    <UiCalendar @class="field" @type="date" @inline={{true}} @onChange={{action (mut this.model.effectiveOn)}} />
  </div>
  <div class="actions">
    <button class="ui red button" {{action "respondEffectiveDateModal" false}}>
      Cancel
    </button>
    <button class="ui green right labeled icon button" {{action "respondEffectiveDateModal" true}}>
      Save
      {{#if this.model.effectiveOn}}
        {{time-ago this.model.effectiveOn}}
        on
        {{time this.model.effectiveOn "M/D/YY"}}
      {{/if}}
      <i class="check icon"></i>
    </button>
  </div>
</UiModal>
