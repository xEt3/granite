<hgroup>
  <p class="right aligned text">If you need assistance call: <span class="strong"><a href="tel:(406)248-6178">(406) 248-6178</a></span></p>
  <h2 class="ui header">
    New Corrective Action For Issue
    <LinkTo @route="account.employee.index.counseling.issue" class="right floated text text-danger">
      <i class="remove icon"></i>
    </LinkTo>
  </h2>
</hgroup>
<div class="ui divider"></div>

<QuickForm
  @form={{this.form}}
  @model={{this.model}}
  @controller={{this}}
  @tagName="div"/>

<div class="ui divider"></div>
<form {{on "submit" (prevent-default (fn this.data.saveRecord this.model "working" this.saveOptions))}}>
  <Form::ActionButton type="submit" class="ui positive fluid huge button" @loading={{this.data.statuses.working.isLoading}}>Save Corrective Action</Form::ActionButton>
</form>
