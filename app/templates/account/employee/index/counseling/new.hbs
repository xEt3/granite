<div class="ui raised padded segment container clearfix animated fadeInUp">
  <hgroup class="clearfix">
    <h1 class="ui header">
      New Employment Issue
      <LinkTo @route="account.employee.index.counseling.index" class="right floated text">
        <i class="remove icon"></i>
      </LinkTo>
    </h1>
  </hgroup>
  <div class="ui divider"></div>

  <p class="center aligned text">
    <LinkTo @route="account.settings.index.processes" class={{unless this.severities.length "text-danger"}}>
      <i class="{{if this.severities.length "info circle" "warning sign"}} icon"></i> Visit the <strong>Correction Action Options</strong> section in your <strong>Processes</strong> settings to configure options{{if this.severities.length "." " before proceeding!"}}
    </LinkTo>
  </p>

  {{quick-form
    this.form
    this.model
    this
    tagName="div"}}

  <div class="ui divider"></div>
  <form {{action "save" this.model on="submit"}}>
    <Form::ActionButton type="submit" class="ui positive fluid huge button" @loading={{this.working}}>Save Issue</Form::ActionButton>
  </form>
</div>
