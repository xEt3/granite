<div class="ui raised padded segment container clearfix animated fadeInUp">
  {{#confirm-modal deleteContext=this.model.title as |confirmDelete|}}
    <hgroup class="clearfix">
      <p>
        <LinkTo @route="account.employee.index.counseling">
          <i class="angle left icon"></i>
          Back To All Issues
        </LinkTo>
      </p>

      <h2 class="ui left floated header">
        {{#link-to "account.employee.index.counseling.issue"}}
          {{this.model.title}}
        {{/link-to}}

        <div class="sub header">
          <strong>{{this.model.type}}</strong>
        </div>
        <div class="sub header">
          {{#if (await this.model.actionSeverity)}}
            This issue started at <strong>{{get (await this.model.actionSeverity) "title"}}</strong>
          {{/if}}
        </div>
      </h2>

      {{#unless this.onCorrectiveActionSubroute}}
        {{#ui-dropdown class="item icon top right pointing right floated"}}
          <i class="wrench icon"></i><i class="dropdown icon"></i>
          <div class="menu">
            {{#if correctiveActions}}
              <LinkTo class="item" @route="account.employee.index.counseling.print-all" @query={{hash issue=model.id slug=model.slug }}>
                <i class="print icon"></i>
                Print Corrective Actions
              </LinkTo>
            {{/if}}
            <div class="text-danger header">Danger Zone</div>
            <a href="#" class="text-danger item" {{action (pipe confirmDelete (action "delete"))}}>
              <i class="trash icon"></i>Delete Record
            </a>
          </div>
        {{/ui-dropdown}}
      {{/unless}}
    </hgroup>
  {{/confirm-modal}}

  <div class="ui divider"></div>
  {{outlet}}
</div>
