{{stateful-intro-js
  user=this.auth.user
  steps=this.intros
  start-if=true
  hintKey="counseling-index"}}

<div class="ui raised padded segment container clearfix animated fadeInUp">
  <hgroup class="clearfix">
    <h1 class="ui header left floated">
      Employee Counseling
    </h1>

    <div class="right aligned text floated menu__actions">
      <h3 class="ui inline header">
        {{#link-to "account.employee.index.counseling.new"}}
          <i id="add-issue" class="plus icon"></i>
        {{/link-to}}
      </h3>
    </div>
  </hgroup>
  <div class="ui divider"></div>

  {{display/resource-list
    this.model
    "list-item/employee-issue-item"
    linkTo="account.employee.index.counseling.issue"
    linkClass="item"
    modelIdentifier="slug"
    class="ui divided link items"}}

  {{elements/x-pagination
    page=(readonly this.page)
    pages=(readonly this.pages)
    onchange=(action (mut this.page))}}
</div>
