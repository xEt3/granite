<div class="fields">
  <div class="five wide field">
    <label for="first-name">First Name</label>
    {{validated-input type="text" model=model valuePath="firstName" placeholder="First Name" id="first-name"}}
  </div>
  <div class="three wide field">
    <label for="middle-name">Middle Name</label>
    {{input type="text" value=model.middleName placeholder="Middle" id="middle-name"}}
  </div>
  <div class="five wide field">
    <label for="last-name">Last Name</label>
    {{validated-input type="text" model=model valuePath="lastName" placeholder="Last Name" id="last-name"}}
  </div>
  <div class="three wide field">
    <label for="suffix-name">Suffix</label>
    {{#ui-dropdown class="selection" onChange=(action (mut model.suffix))}}
      <div class="default text">Suffix</div>
      <i class="dropdown icon"></i>
      <div class="menu">
        {{#each suffixes as |suffix|}}
          <div class="item" data-value="{{suffix}}">
            {{suffix}}
          </div>
        {{/each}}
      </div>
    {{/ui-dropdown}}
  </div>
</div>
<div class="two fields">
  <div class="field">
    <label for="employee-phone">Phone Number</label>
    {{masked-input type="tel" value=model.phone placeholder="Employee Phone #" id="employee-phone" mask="(111) 111-1111"}}
  </div>
  <div class="field">
    <label for="email">Email</label>
    {{validated-input type="email" model=model valuePath="email" placeholder="Email" id="email"}}
  </div>
</div>

{{#ui-calendar class="field" type="date" startMode="year" onChange=(action (mut model.dateOfBirth))}}
  <label for="ui-calendar-date-only">Birth Date</label>
  <div class="ui calendar" id="ui-calendar-date-only">
    <div class="ui input left icon">
      <i class="calendar icon"></i>
      <input type="text" placeholder="Select or type a date">
    </div>
  </div>
{{/ui-calendar}}

<h3 id="mailing-address" class="ui horizontal header divider section">
  <i class="grey marker icon"></i>Mailing Address
</h3>
<div class="field">
  <label for="address-line-1">Address Line 1</label>
  {{validated-input type="text" model=model valuePath="addressLine1" placeholder="Address Line 1" id="address-line-1"}}
</div>
<div class="field">
  <label for="address-line-2">Address Line 2</label>
  {{input type="text" value=model.addressLine2 placeholder="Address Line 2" id="address-line-2"}}
</div>
<div class="three fields">
  <div class="field">
    <label for="address-city">City</label>
    {{input type="text" value=model.addressCity placeholder="City" id="address-city"}}
  </div>
  <div class="field">
    <label for="state-name">State</label>
    {{#ui-dropdown class="search selection" selected=model.addressState onChange=(action (mut model.addressState))}}
      {{#if stateIsMontana}}<i class="text-danger heart icon"></i>{{/if}}
      <div class="default text">State</div>
      <i class="dropdown icon"></i>
      <div class="menu">
        {{#each states as |state|}}
          <div class="item" data-value="{{state.value}}">
            {{state.label}}
          </div>
        {{/each}}
      </div>
    {{/ui-dropdown}}
  </div>
  <div class="field">
    <label for="address-zip">Zip</label>
    {{input type="text" value=model.addressZip placeholder="Zip" id="address-zip"}}
  </div>
</div>

<h3 class="ui horizontal header divider section">
  <i class="first aid icon"></i>Emergency Contact Information
</h3>
<div class="three fields">
  <div class="field">
    <label for="emergency-contact-first" class="">Contact First Name</label>
    {{input type="text" value=model.emergencyContactNameFirst placeholder="First Name" id="emergency-contact-first"}}
  </div>
  <div class="field">
    <label for="emergency-contact-last" class="">Contact Last Name</label>
    {{input type="text" value=model.emergencyContactNameLast placeholder="Last Name" id="emergency-contact-last"}}
  </div>
  <div class="field">
    <label for="emergency-contact-phone" class="">Contact Phone</label>
    {{input type="tel" value=model.emergencyContactPhone placeholder="Emergency Phone #" id="emergency-contact-phone"}}
  </div>
</div>
