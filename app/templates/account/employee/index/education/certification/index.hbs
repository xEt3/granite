<h1>
  {{this.model.name}}
  <small class="right floated text">
    {{#link-to "account.employee.index.education.certification.edit"}}<i class="edit icon"></i>{{/link-to}}
    {{#confirm-modal tagName="span" deleteContext=this.model.name as |confirm|}}
      <a href="#" class="text-danger" {{action (pipe confirm (action "delete"))}}><i class="trash icon"></i></a>
    {{/confirm-modal}}
  </small>
</h1>
<div class="ui divider"></div>

{{#if this.model.renews}}
  <h3>
    Renewals
    <small>
      {{#link-to "account.employee.index.education.certification.renewal"}}
        <i class="plus fitted icon"></i>
        Add renewal
      {{/link-to}}
    </small>
    <small class="right floated light text">Next Renewal Due {{time-ago this.model.nextRenewalDate}} on {{time this.model.nextRenewalDate "M/D/YY"}}</small>
  </h3>

  <div class="ui list">
    {{#each this.model.renewals as |renewal|}}
      {{renewal.completedOn}}
    {{else}}
      {{this.model.name}} hasn't been renewed, yet.
    {{/each}}
  </div>
{{/if}}

{{#if this.model.document}}
  <h3>Documents</h3>
  <p>
    {{#link-to "account.document" this.model.document.id}}{{this.model.document.title}}{{/link-to}}
  </p>
{{/if}}
