<h1 class="ui header titlecased text">
  {{if renewal 'Editing' 'Adding'}} Renewal For {{model.certification.name}}
  <small class="right floated">
    {{#link-to 'account.employee.index.education.certification' model.certification class="text-danger"}}
      Cancel
    {{/link-to}}
  </small>
</h1>

<div class="ui divider"></div>

{{#quick-form
  currentForm.elements
  model.renewal
  this
  submitClass="large green fluid"
  onsubmit=(action "saveRenewal")
}}
  {{#if renewal}}Save Changes{{else}}Add Renewal{{/if}}
{{/quick-form}}
