<div class="ui container employee__onboarding">
  {{#ui-progress percent=progress class="indicating employee__onboarding-progress"}}
    <div class="bar"></div>
  {{/ui-progress}}

  <div class="ui padded segment employee__onboarding-segment">
    <div class="ui basic segment">
      <h1 class="ui header">Onboard {{model.fullName}}</h1>
    </div>

    <div class="ui basic segment">
      {{outlet}}
    </div>
  </div>

  {{display/form-steps steps=steps basePath=basePath class="employee__onboarding-steps"}}
</div>
