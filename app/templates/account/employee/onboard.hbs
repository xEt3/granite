  {{/ui-progress}}

  <div class="ui padded segment employee__onboarding-segment">
    <hgroup class="clearfix">
      <h1 class="ui header">Onboard {{model.fullName}}</h1>
    </hgroup>
    <div class="ui divider"></div>

    {{outlet}}
  </div>

  {{display/form-steps steps=steps basePath='account.employee.onboard' class='employee__onboarding-steps'}}
</div>
