<form class="ui form" {{action "saveAndContinue" on="submit"}}>
  <h2 class="ui horizontal divider header">Employee Information</h2>
  <div class='field'>
    {{#auto-focus}}
      {{ui-calendar
        class="field"
        type="date"
        startMode="year"
        label="Birth Date"
        dateValue=model.dateOfBirth
        onChange=(action (mut model.dateOfBirth))}}
    {{/auto-focus}}
  </div>
  <div class="field">
    <label for="privateEmail">Private Email</label>
    {{validated-input type="text" model=model valuePath='privateEmail' placeholder="Private Email" id="privateEmail"}}
  </div>
  <h3 class="ui horizontal header divider section">
    <i class="grey marker icon"></i>
    Mailing Address
  </h3>
  <div class="field">
    <label for="address-line-1">Address Line 1</label>
    {{validated-input type="text" model=model valuePath="addressLine1" placeholder="Address Line 1" id="address-line-1"}}
  </div>
  <div class="field">
    <label for="address-line-2">Address Line 2</label>
    {{input type="text" value=model.addressLine2 placeholder="Address Line 2" id="address-line-2"}}
  </div>
  <div class="three fields">
    <div class="field">
      <label for="address-city">City</label>
      {{input type="text" value=model.addressCity placeholder="City" id="address-city"}}
    </div>
    <div class="field">
      <label for="state-name">State</label>
      {{#ui-dropdown class="search selection" selected=model.addressState onChange=(action (mut model.addressState))}}
        {{#if stateIsMontana}}<i class="text-danger heart icon"></i>{{/if}}
        <div class="default text">State</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          {{#each states as |state|}}
            <div class="item" data-value={{state.value}}>
              {{state.label}}
            </div>
          {{/each}}
        </div>
      {{/ui-dropdown}}
    </div>
    <div class="field">
      <label for="address-zip">Zip</label>
      {{input type="text" value=model.addressZip placeholder="Zip" id="address-zip"}}
    </div>
  </div>
  <h3 class="ui horizontal header divider section">
    <i class="red first aid icon"></i>
    Emergency Contact
  </h3>
  <div class="three fields">
    <div class="field">
      <label for="emergency-contact-first" class="">Contact First Name</label>
      {{input type="text" value=model.emergencyContactNameFirst placeholder="First Name" id="emergency-contact-first"}}
    </div>
    <div class="field">
      <label for="emergency-contact-last" class="">Contact Last Name</label>
      {{input type="text" value=model.emergencyContactNameLast placeholder="Last Name" id="emergency-contact-last"}}
    </div>
    <div class="field">
      <label for="emergency-contact-phone" class="">Contact Phone</label>
      {{masked-input type="tel" value=model.emergencyContactPhone placeholder="Emergency Phone #" id="emergency-contact-phone" mask="(111) 111-1111"}}
    </div>
  </div>

  <div class="ui divider"></div>
  {{#form/action-button type="submit" class="ui huge fluid green button" loading=working}}Next{{/form/action-button}}
</form>
