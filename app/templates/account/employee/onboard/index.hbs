<form class="ui form" {{action "saveAndContinue" on="submit"}}>
  <h2 class="ui horizontal divider header">Employee Information</h2>
  {{#ui-calendar class="field" type="date" startMode="year" onChange=(action (mut model.dateOfBirth))}}
    <label for="ui-calendar-date-only">Birth Date</label>
    <div class="ui calendar" id="ui-calendar-date-only">
      <div class="ui input left icon">
        <i class="calendar icon"></i>
        <input type="text" tabindex="1" placeholder="Type In Or Select A Date">
      </div>
    </div>
  {{/ui-calendar}}
  <h3 class="ui horizontal header divider section">
    <i class="grey marker icon"></i>
    Mailing Address
  </h3>
  <div class="field">
    <label for="address-line-1">Address Line 1</label>
    {{validated-input type="text" tabindex="2" model=model valuePath="addressLine1" placeholder="Address Line 1" id="address-line-1"}}
  </div>
  <div class="field">
    <label for="address-line-2">Address Line 2</label>
    {{input type="text" tabindex="3" value=model.addressLine2 placeholder="Address Line 2" id="address-line-2"}}
  </div>
  <div class="three fields">
    <div class="field">
      <label for="address-city">City</label>
      {{input type="text" tabindex="4" value=model.addressCity placeholder="City" id="address-city"}}
    </div>
    <div class="field">
      <label for="state-name">State</label>
      {{#ui-dropdown class="search selection" selected=model.addressState onChange=(action (mut model.addressState))}}
        {{#if stateIsMontana}}<i class="text-danger heart icon"></i>{{/if}}
        <div class="default text">State</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          {{#each states as |state|}}
            <div class="item" data-value="{{state.value}}">
              {{state.label}}
            </div>
          {{/each}}
        </div>
      {{/ui-dropdown}}
    </div>
    <div class="field">
      <label for="address-zip">Zip</label>
      {{input type="text" tabindex="6" value=model.addressZip placeholder="Zip" id="address-zip"}}
    </div>
  </div>
  <h3 class="ui horizontal header divider section">
    <i class="red first aid icon"></i>
    Emergency Contact Information
  </h3>
  <div class="three fields">
    <div class="field">
      <label for="emergency-contact-first" class="">Contact First Name</label>
      {{input type="text" tabindex="7" value=model.emergencyContactNameFirst placeholder="First Name" id="emergency-contact-first"}}
    </div>
    <div class="field">
      <label for="emergency-contact-last" class="">Contact Last Name</label>
      {{input type="text" tabindex="8" value=model.emergencyContactNameLast placeholder="Last Name" id="emergency-contact-last"}}
    </div>
    <div class="field">
      <label for="emergency-contact-phone" class="">Contact Phone</label>
      {{input type="tel" tabindex="9" value=model.emergencyContactPhone placeholder="Emergency Phone #" id="emergency-contact-phone"}}
    </div>
  </div>

  <div class="ui divider"></div>
  {{#form/action-button type="submit" tabindex="10" class="ui huge fluid green button" loading=working}}Next{{/form/action-button}}
</form>
