<form class="ui form" {{action "save" on="submit"}}>
  <h4 class="ui dividing header">Add Employee Information</h4>
  <div class="fields">
    <div class="field">
      <label for="address-line-1">Address Line 1</label>
      {{validated-input type="text" model=model valuePath="addressLine1" placeholder="Address Line 1" id="address-line-1"}}
    </div>
    <div class="field">
      <label for="address-line-2">Address Line 2</label>
      {{input type="text" value=model.addressLine2 placeholder="Address Line 2" id="address-line-2"}}
    </div>
    <div class="two fields"
    <div class="field">
      <label for="state">State</label>
      {{validated-input type="text" model=model valuePath="lastName" placeholder="Last Name" id="last-name"}}
    </div>

    <div class="three wide field">
      <label for="suffix-name">Suffix</label>
      {{#ui-dropdown class="selection" onChange=(action (mut model.suffix))}}
        <div class="default text">Suffix</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          {{#each suffixes as |suffix|}}
            <div class="item" data-value="{{suffix}}">
              {{suffix}}
            </div>
          {{/each}}
        </div>
      {{/ui-dropdown}}
    </div>
  </div>

  <div class="field">
    <label for="email">Email</label>
    {{validated-input type="text" model=model valuePath="email" placeholder="Email" id="email"}}
  </div>

  <div class="ui divider"></div>
  {{#form/action-button type="submit" class="ui massive fluid green button" loading=working}}Begin Onboarding{{/form/action-button}}
</form>
