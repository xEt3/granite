<form class="ui form" {{action "saveAndContinue" on="submit"}}>
  <div class="right aligned text">
    {{#ui-dropdown class="inline right pointing labeled employee__onboarding-asset-dropdown"}}
      <h3 class="ui header"><a href="#"><i class="plus icon"></i></a></h3>
      <div class="menu">
        <div class="header">Click Equipment to Assign</div>
        <div class="ui search icon input">
          <i class="search icon"></i>
          <input type="text" name="search" placeholder="Search Equipment...">
        </div>
        {{#each assignableAssets as |assetGroup|}}
          <div class="item">
            <i class="left dropdown icon"></i>
            <span class="text">
              {{#if assetGroup.asset.icon}}
                <i class="{{assetGroup.asset.icon}} icon"></i>
              {{/if}}
              {{assetGroup.asset.name}}
            </span>
            <div class="left menu">
              <div class="center aligned header">
                {{assetGroup.asset.name}}
              </div>
              {{#link-to 'account.asset' assetGroup.asset.id class="item"}}<i class="settings icon"></i>Configure {{assetGroup.asset.name}}{{/link-to}}
              <div class="divider"></div>
              <a href="#" class="item" {{action "createAsset"}}>
                <i class="asterisk icon"></i> New Stock Item
              </a>
              <div class="divider"></div>
              {{#each assetGroup.stock as |asset|}}
                <a href="#" class="item" {{action "selectAsset" asset}}>
                  {{asset.identifier}}
                </a>
              {{else}}
                <div class="center aligned header">
                  No available stock for {{assetGroup.asset.name}}.
                </div>
              {{/each}}
            </div>
          </div>
        {{/each}}
      </div>
    {{/ui-dropdown}}
  </div>

  <div class="ui relaxed divided list">
    {{#each assignedAssets as |asset|}}
      <div class="item">
        {{asset.identifier}}
      </div>
    {{else}}
      <h2 class="ui center aligned header">
        No assets assigned. Click "+" to assign some! <i class="right floated clockwise rotated reply icon"></i>
      </h2>
    {{/each}}
  </div>
</form>
