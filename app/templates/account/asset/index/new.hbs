<form class="ui form container" {{action "save" on="submit"}}>
  <div class="field">
    <label for="asset-identifier">Asset Identifier</label>
    {{input type="text" value=model.identifier id="asset-identifier" placeholder="Unique identifier (VIN, Stock #, RFID)"}}
  </div>
  <div class="ui divider"></div>

  {{#each asset.attributes as |attribute|}}
    {{input/custom-field object=model.customFields attribute=attribute}}
  {{/each}}

  <p class="text center aligned">Add custom attributes in the {{#link-to 'account.asset.information'}}attributes tab{{/link-to}}</p>

  {{#form/action-button type="submit" class="ui huge fluid green button" loading=working}}Add Asset Item{{/form/action-button}}
</form>
<div class="ui divider"></div>
