<div class="right aligned text floated menu__actions">
  <h3 class="ui header">
    <Input::DocumentSelectionModal @title="Assign asset documents" @selected={{this.model.documents}} @autoTag="Asset" @onSelected={{pipe-action (action (mut this.model.documents)) (action "save")}} as |execute|>
      <a href="#" {{action execute "selectDocuments"}}>
        <EmberTooltip @side="left" @popperContainer="body" @text="Add a document" />
        <i class="plus icon"></i>
      </a>
    </Input::DocumentSelectionModal>
  </h3>
</div>

<div class="ui divided items">
  {{#each this.model.documents as |file|}}
    <span class="item">
      {{list-item/document-item
        file
        deleteAction=(action "removeDocument")
        confirmDeleteContent="Are you sure you want to remove this document?"
      }}
    </span>
  {{else}}
    <h2 class="ui center aligned header">No documents available.</h2>
  {{/each}}
</div>

<Elements::XPagination @page={{readonly this.page}} @pages={{readonly this.pages}} @onchange={{action (mut this.page)}} />
