<div class="ui container">
  <div class="ui pointing menu">
    <LinkTo @route="account.asset.index" class="item">
      <i class="list icon"></i>Stock
    </LinkTo>
    <LinkTo @route="account.asset.information" class="item">
      <i class="info icon"></i>Attributes
    </LinkTo>
    <LinkTo @route="account.asset.documents" class="item">
      <i class="file icon"></i>Associated Documents
    </LinkTo>
    <div class="right menu">
      <UiDropdown @class="item icon top right pointing">
        <i class="wrench icon"></i><i class="dropdown icon"></i>
        <div class="menu">
          <LinkTo @route="account.asset.edit" class="item"><i class="edit icon"></i>Edit</LinkTo>
          <LinkTo @route="account.asset.settings" class="item"><i class="settings icon"></i>Settings</LinkTo>
          <div class="text-danger header">Danger Zone</div>
          <div class="item">
            <ConfirmModal @deleteContext={{this.model.name}} as |confirm|>
              <a href="#" class="text-danger" {{on "click" (prevent-default (pipe confirm (fn this.data.deleteRecord this.model "working" this.deleteOptions)))}}><i class="trash icon"></i>Delete Record</a>
            </ConfirmModal>
          </div>
        </div>
      </UiDropdown>
    </div>
  </div>

  <div class="ui padded raised segment clearfix">
    <hgroup class="clearfix">
      <h1 class="ui header">
        <div class="content">
          <i class="{{this.model.icon}} icon"></i>{{this.model.name}}
          <div class="sub header">
            Created {{time-ago this.model.created}} on {{time this.model.created}}
          </div>
        </div>
      </h1>
    </hgroup>

    <div class="ui divider"></div>

    {{outlet}}
  </div>
</div>
