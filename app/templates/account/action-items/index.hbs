<h2 class="ui right aligned header">
  {{#link-to "account.action-items.new" class="text-white sub header"}}<i class="plus icon"></i>{{/link-to}}
</h2>
<div class="ui divider"></div>

<div class="clearfix">
  <span class="right floated">
    {{ember-tooltip
      side="left"
      text="Sort according to due date"}}
    <a href="#" class="text-white" {{action (toggle "isDsc" this)}}><i class="sort large numeric {{if isDsc "ascending icon" "descending icon"}}"></i></a>
  </span>
  <span class="left floated">
    {{ember-tooltip
      side="right"
      text="Filter according to priority level"}}
    <a href="#" class="text-white" {{action (toggle "expandFiltered" this)}}><i class="large filter icon"></i></a>
  </span>
</div>
<div class="ui divider"></div>

{{#liquid-if expandFiltered}}
  <div class="five ui stackable buttons">
    {{#each priorityFilters as |priorityFilter index|}}
      <button class="ui labeled icon {{object-at index priorityColors}} button" {{action "changeFilter" index}}>
        <i class="{{if (not (contains (inc index) filter)) "square outline" "checkmark box"}} icon"></i>
        {{priorityFilter}}
      </button>
    {{/each}}
  </div>
  <div class="ui hidden divider"></div>
{{/liquid-if}}

{{#if model}}
  <div class="ui cards">
    {{#each model as |actionItem|}}
      {{list-item/action-item actionItem=actionItem class="ui link fluid raised card" onToggleSubscription=(action "toggleSubscription")}}
    {{/each}}
  </div>
{{else}}
  <h4 class="text-white center aligned text header">No projects available.</h4>
{{/if}}
