<div class="ui raised padded segment container clearfix">
  <hgroup>
    <h1 class="ui header">Add an Employee</h1>
  </hgroup>

  <div class="ui divider"></div>

  <form class="ui form" {{action "save" on="submit"}}>
    <div class="fields">
      <div class="five wide field">
        <label for="first-name">First Name</label>
        {{#auto-focus}}
          {{validated-input type="text" model=this.model valuePath="firstName" placeholder="First Name" id="first-name"}}
        {{/auto-focus}}
      </div>
      <div class="three wide field">
        <label for="middle-name">Middle Name</label>
        {{input type="text" value=this.model.middleName placeholder="Middle" id="middle-name"}}
      </div>
      <div class="five wide field">
        <label for="last-name">Last Name</label>
        {{validated-input type="text" model=this.model valuePath="lastName" placeholder="Last Name" id="last-name"}}
      </div>
      <div class="three wide field">
        <label for="suffix-name">Suffix</label>
        {{#ui-dropdown class="selection" onChange=(action (mut this.model.suffix))}}
          <div class="default text">Suffix</div>
          <i class="dropdown icon"></i>
          <div class="menu">
            {{#each this.suffixes as |suffix|}}
              <div class="item" data-value={{suffix}}>
                {{suffix}}
              </div>
            {{/each}}
          </div>
        {{/ui-dropdown}}
      </div>
      <div class="two wide field">
        <label for="suffix-name">Gender</label>
        {{#ui-dropdown class="selection" selected=this.model.gender onChange=(action (mut this.model.gender))}}
          <div class="default text">Gender</div>
          <i class="dropdown icon"></i>
          <div class="menu">
            {{#each this.gender as |gender|}}
              <div class="item" data-value={{gender}}>
                {{gender}}
              </div>
            {{/each}}
          </div>
        {{/ui-dropdown}}
      </div>
    </div>
    <div class="three fields">
      <div class="field">
        {{input/social-security value=this.model.ssn}}
      </div>
      <div class="field">
        <label for="employee-phone">Phone Number</label>
        {{masked-input type="tel" placeholder="Employee Phone #" id="employee-phone" mask="(111) 111-1111" on-change=(action (mut this.model.phone) value="target.value")}}
      </div>
      <div class="field">
        <label for="email">Email</label>
        {{validated-input type="email" model=this.model valuePath="email" placeholder="Email" id="email"}}
      </div>
      <div class="field">
        <label for="employeeNumber">Employee Number</label>
        {{validated-input model=this.model valuePath="employeeNumber" placeholder="Employee Number" id="employee-number"}}
      </div>
    </div>

    <div class="ui divider"></div>
    {{#form/action-button type="submit" class="ui massive fluid green button" disabled=this.disabled loading=this.working}}Begin Onboarding{{/form/action-button}}
  </form>
</div>
