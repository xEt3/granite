{{#if this.showFilters}}
  {{#display/filter-pane
    class="ui content form padded segment container"
    onChange=(action "updateFilter") as |filter|
  }}
    <h2>
      <i class="filter icon"></i> Filters
      <a href="#" class="ui small text right floated text-red" {{action "resetFilters"}}>Reset All</a>
    </h2>

    {{#filter.section "Tags"}}
      {{#filter.selectControl
        "tags"
        this.tags
        searchable=true
        multi=true
        itemValuePath=false
        model=this.filterModels.tags as |item|
      }}
        {{item}}
      {{/filter.selectControl}}
    {{/filter.section}}

    {{#filter.section "Extension"}}
      {{#filter.selectControl
        "extension"
        this.extension
        searchable=true
        multi=true
        itemValuePath=false
        model=this.filterModels.extension as |extension|
      }}
        {{extension}}
      {{/filter.selectControl}}
    {{/filter.section}}
  {{/display/filter-pane}}
{{/if}}

<div class="ui raised padded segment container clearfix">
  <hgroup class="clearfix">
    <h1 class="ui header left floated">
      Documents
    </h1>

    <div class="right aligned text floated menu__actions">
      <h3 class="ui right floated header">
        <a href="#" class={{if this.showFilters "text-red"}} {{action this.toggleProperty "showFilters"}}>
          {{ember-tooltip
            side="left"
            popperContainer="body"
            text="Filters"}}
          <i class="{{if this.showFilters "remove" "filter"}} icon"></i>
        </a>
      </h3>
      {{#ui-dropdown class="right floated top pointing inline"}}
        {{#link-to "account.documents.new" class="right floated"}}
          <h3 class="ui inline header">
            {{ember-tooltip
              side="left"
              popperContainer="body"
              text="Add a document"}}
            <a href="#"><i class="plus icon"></i></a>
          </h3>
        {{/link-to}}
      {{/ui-dropdown}}
    </div>
  </hgroup>

  <div class="ui divider"></div>

  {{display/resource-list
    this.model
    "list-item/document-item"
    linkTo="account.document"
    linkClass="item"
    class="ui divided link items"}}
  {{elements/x-pagination page=(readonly this.page) pages=(readonly this.pages) onchange=(action (mut this.page))}}
</div>
