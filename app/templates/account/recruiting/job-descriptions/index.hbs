<StatefulIntroJs @user={{this.auth.user}} @steps={{this.intros}} @start-if={{true}} @hintKey="job-description-index" />

<div class="ui raised padded segment container clearfix animated fadeInUp">
  <hgroup class="clearfix">
    <h1 class="ui header left floated">
      Job Descriptions
    </h1>

    <div class="right aligned text floated menu__actions">
      <h3 class="ui inline header">
        <LinkTo @route="account.recruiting.job-descriptions.new">
          <i id="add-job-description" class="plus icon"></i>
        </LinkTo>
      </h3>
    </div>
  </hgroup>
  <div class="ui divider"></div>

  {{display/resource-list
    this.model
    "list-item/job-item"
    linkTo="account.job-description"
    linkClass="item"
    class="ui divided link items"}}

  <Elements::XPagination @page={{readonly this.page}} @pages={{readonly this.pages}} @onchange={{action (mut this.page)}} />
</div>
