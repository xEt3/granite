<div class="ui very padded raised segment animated fadeInUp">
  <div class="ui top attached {{if this.model.disqualified "red" "green"}} label">
    <i class="info circle icon"></i>
    {{log this}}
    This application is currently
    {{~#if this.model.disqualified}}
      disqualified{{#if this.model.disqualificationReason}} ({{this.model.disqualificationReason}}){{/if}}
    {{~else if this.stage}}
      in the <strong>{{this.stage.name}}</strong> stage
    {{~else}}
      not in a stage
    {{~/if}}.
    <div class="right floated detail">
      Submitted {{time-ago this.model.completedOn}} on {{time this.model.completedOn}}
    </div>
  </div>

  <hgroup class="clearfix">
    <span class="ui large header">
      Job Application for {{this.model.person.firstName}} {{this.model.person.lastName}}
    </span>

    <UiDropdown @class="item icon top right floated right pointing">
      <i class="wrench icon"></i><i class="dropdown fitted icon"></i>
      <div class="menu">
        <div class="header">Actions</div>
        <LinkTo @route="account.job-opening.campaign.job-application.edit" @model={{this.model.id}} class="item">
          <i class="edit icon"></i>Edit Application
        </LinkTo>
      </div>
    </UiDropdown>
  </hgroup>

  <div class="job-application__labels">
    {{#each this.model.labels as |label|}}
      {{custom-label label size="small" tagName="span"}}
    {{/each}}
  </div>

  <div class="ui divider"></div>

  {{outlet}}
</div>
