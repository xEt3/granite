<div class="ui form">
  <h2 class="ui horizontal divider header">
    Display
  </h2>
  <p>Edit the title and description of your job listing</p>

  <Input::UiInput @value={{this.model.title}} @placeholder="What shows as the job name on the listing?">
    Title
  </Input::UiInput>

  <div class="field">
    <label>Description (How your job description displays on the listing)</label>
    <Input::RichText @value={{this.model.description}} @onChange={{action (mut this.model.description)}} />
  </div>

  <h2 class="ui horizontal divider header">
    Available Manual Sources
    <a href="#" {{action
      (pipe
        (action "addManualSource")
        (action "save")
        (action "addToSelection")
      )
    }}>
      <i class="plus icon"></i>
    </a>
  </h2>
  <div class="ui divided link items">
    {{#each this.sources.manual as |manualSource|}}
      {{list-item/applicant-source-select
        manualSource
        selected=(contains manualSource this.model.manualApplicantSources)
        onUpdate=(action "mutManualSelection")}}
    {{else}}
      <h2 class="center aligned light text header">
        <i class="exclamation triangle icon"></i>
        You don't have any available manual sources.
      </h2>
    {{/each}}
  </div>

  <h2 class="ui horizontal divider header">Available Automatic Sources</h2>
  <div class="ui divided link items">
    {{#each this.sources.automatic as |source|}}
      {{list-item/applicant-source-select
        source
        selected=(contains source this.model.applicantSources)
        onUpdate=(action "mutSelection")}}
    {{/each}}
  </div>

  <div class="ui divider"></div>

  <form {{action "saveAndContinue" on="submit"}}>
    <Form::ActionButton @type="submit" @class="ui huge fluid green button" @loading={{this.working}}>
      Next
    </Form::ActionButton>
  </form>
</div>

<UiModal @id="modal__add--manual-source" @class="small form">
  <i class="close icon"></i>
  <div class="header">
    Create a new manual source
  </div>
  <div class="content">
    <Input::UiInput @value={{this.manualSource.name}} @placeholder="ex. Post to Craigslist">
      Manual Source Name
    </Input::UiInput>
  </div>
  <div class="actions">
    <button type="button" class="ui red button" {{action "respondManualSource" false}}>
      Cancel
    </button>
    <button type="button" class="ui green right labeled icon button" disabled={{not this.manualSource.name}} {{action "respondManualSource" true}}>
      Save Manual Source
      <i class="check icon"></i>
    </button>
  </div>
</UiModal>
