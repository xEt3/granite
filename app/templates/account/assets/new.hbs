<div class="ui raised very padded container segment">
  <form class="ui form" {{action "save" on="submit"}}>
    <h1 class="ui dividing header">Add a New Asset Category</h1>
    <div class="field">
      <label for="asset-name">Asset Name</label>
      <div class="ui left select-addon input pay-rate-number">
        {{#ui-dropdown class="inline scrolling" selected=model.icon onChange=(action (mut model.icon))}}
          <div class="default text">Icon</div>
          <i class="dropdown icon"></i>
          <div class="menu">
            {{#each icons as |icon|}}
              <div class="item" data-value="{{icon}}">
                <i class="{{icon}} icon"></i>
              </div>
            {{/each}}
          </div>
        {{/ui-dropdown}}

        {{input type="text" value=model.name id="asset-name" placeholder="Keycards"}}
      </div>
    </div>
    <div class="field">
      <label for="asset-description">Description</label>
      {{input type="text" value=model.description id="asset-description" placeholder="All the keycards for our employees"}}
    </div>
    <div class="field">
      <label for="asset-description">Documents</label>
      {{#input/document-selection-modal
        title="Select Asset Documents"
        selected=model.documents
        onSelected=(action (mut model.documents))
        as |execute|}}
        <button class="ui basic button" {{action execute 'selectDocuments'}}>
          <i class="folder icon"></i>
          Assign Asset documents
          {{#if model.documents.length}}
            <span class="ui label">{{model.documents.length}} Assigned</span>
          {{/if}}
        </button>
      {{/input/document-selection-modal}}
    </div>
    <div class="field center aligned text">
      <div class="ui toggle checkbox">
        <input type="checkbox">
        <label>Can {{if model.name model.name 'these assets'}} be shared by employees?</label>
      </div>
    </div>
    <div class="ui divider"></div>

    <button class="ui huge fluid positive huge button" type="submit">Save</button>
  </form>
</div>
