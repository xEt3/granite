{{!-- {{intro-js steps=intros start-if=true}} --}}
<div class="ui raised padded segment container clearfix">
  <hgroup class="clearfix">
    <h1 class="ui header left floated">
      Company Assets
    </h1>

    <h3>{{#link-to "account.assets.new" class="right floated"}}<i class="plus icon"></i>{{/link-to}}</h3>
  </hgroup>
  <div class="ui divider"></div>

  <div class="ui divided link items">
    {{#each model as |asset|}}
      {{#link-to "account.asset" asset class="item"}}
        {{list-item/asset-item asset=asset}}
      {{/link-to}}
    {{else}}
      <h2 class="ui center aligned header">No assets available.</h2>
    {{/each}}
  </div>

  {{elements/x-pagination page=(readonly page) pages=(readonly pages) onchange=(action (mut page))}}
</div>
