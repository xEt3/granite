<div class="ui form">
  <h3 class="ui header">General Account Settings</h3>
  <div class="ui divider"></div>
  <div class="field">
    <label for="input__dropzone--company-image">Company Logo</label>
    <div id="template" class="center aligned">
      <DropZone @url={{this.fileEndpoint}} @id={{this.dropzoneId}} @class="input__dropzone" @method="put" @uploadMultiple={{false}} @acceptedFiles="image/*" @maxFiles={{1}} @autoProcessQueue={{false}} @dictDefaultMessage="Drop Files or Click to Replace/Add Picture" @thumbnailWidth="175" @headers={{hash X-API-Token=this.auth.token}} @addedfile={{action "addedFile"}} @success={{action "uploadedFile"}} @capture="camera" />
    </div>
  </div>

  <div class="ui divider"></div>

  {{quick-form
    this.settingsForm
    this.model
    this
    class="ui grid padded container"
    tagName="div"}}

  <div class="ui divider"></div>

  <form {{action "saveSettings" on="submit"}}>
    <Form::ActionButton @type="submit" @class="ui positive fluid huge button" @loading={{this.working}}>
      Save Changes
    </Form::ActionButton>
  </form>
</div>
