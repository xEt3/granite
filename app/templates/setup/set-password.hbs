<div class="striped-background">
  <br />
  <div class="ui raised very padded text container segment">
    <div class="column">
      <i class="ui huge lock icon"></i>
      <h1 class="ui teal image header">
        <div class="content">
          Set your password
        </div>
      </h1>
      <form class="ui large form">
        <div class="ui stacked segment">
          <div class="field">
              {{validated-input type="password" name="email" placeholder="Password"}}
          </div>
          <div class="field">
              {{validated-input type="password" name="password" placeholder="Confirm Password"}}
          </div>
          <div class="ui fluid large teal submit button">Login</div>
        </div>
      </form>
      <div class="ui message">
        <div class="header">
          Password Guidelines
        </div>
        <ul class="list">
          <li class="item">Must contain an uppercase letter</li>
          <li class="item">Must contain a lowercase letter</li>
          <li class="item">Must be at least 8 characters</li>
        </ul>
      </div>
    </div>
  </div>
</div>
