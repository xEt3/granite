<a href="#" class="item" {{on "click" (prevent-default (action "toggle"))}}><i class="large sidebar icon"></i></a>
<Search::SuggestionInput @class="item menu__search-input" @placeholder="Search Granite HR..." />
<div class="right menu">
  <UiDropdown @class="item company-logo-dropdown">
    {{! template-lint-disable no-inline-styles }}
    <div class="company-logo" style={{this.logoUrl}}>
    </div>
    <i class="dropdown icon"></i>
    <div class="menu">
      <div class="header">Signed in as {{this.auth.user.firstName}}</div>
      <LinkTo @route="account.settings" class="item"><i class="settings icon"></i>Settings</LinkTo>
      <a href="#" class="item" {{on "click" (prevent-default (action "logout"))}}><i class="sign out alternate icon"></i>Sign Out</a>
    </div>
  </UiDropdown>
</div>
