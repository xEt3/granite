<div class="field">
  <label for={{@inputId}} class={{if @srOnly "sr-only"}}>
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{@placeholder}}
    {{/if}}
  </label>
  <Input @type={{if @type @type this.type}} @id={{@inputId}} @disabled={{@disabled}} @class={{@inputClass}} @placeholder={{@placeholder}} @value={{@value}} ...attributes />
</div>
