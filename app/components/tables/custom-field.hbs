<tr>
  <td>
    <a href="#" class="text-danger" {{on "click" (prevent-default (fn @onDelete @key))}}>
      <i class="trash icon"></i>
      <EmberTooltip
        @side="right"
        @popperContainer="body"
        @text="Delete custom field"/>
    </a>
    {{@key}}
  </td>

  <td>
    {{#if this.editingValue}}
      <form {{on "submit" (prevent-default this.saveEdit)}}>
        <div class="field">
          <div class="ui grid">
            <div class="ten wide column">
              <label for="new-custom-value" class="sr-only">New {{@key}} value</label>
              <AutoFocus>
                <Input @type="text" @name="new-custom-value" @class="ui transparent input" @value={{this.newValue}} @placeholder="Field value"/>
              </AutoFocus>
            </div>
            <div class="six wide center middle aligned center aligned column">
              <a href="#" class="ui text-green" {{on "click" (prevent-default this.saveEdit)}}><i class="check icon"></i></a>
              <a href="#" class="ui text-danger" {{on "click" (prevent-default this.cancelEdit)}}><i class="close icon"></i></a>
            </div>
          </div>
        </div>
      </form>
    {{else}}
      <a href="#" {{on "click" (prevent-default this.editValue)}}>
        <EmberTooltip
          @side="left"
          @popperContainer="body"
          @text="Click to edit value"/>
        {{@value}}
        <i class="edit icon"></i>
      </a>
    {{/if}}
  </td>
</tr>
